<?xml version="1.0" encoding="utf-8"?>



    <androidx.cardview.widget.CardView
        android:background="@color/lightgrey"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/plotcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:elevation="6dp"
        android:orientation="vertical"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/plotImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"


                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_property_type"
                    android:layout_width="85dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/roundcorner"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="6dp"
                    android:text="Residential/ Comertial"
                    android:textAllCaps="false"
                    android:textColor="#13d473 "
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/priceRange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:hint="PKR. 10000000"
                    android:textColor="#243146"
                    android:paddingLeft="10dp"

                    android:textColorHint="@color/black"
                    android:textSize="22sp"
                    />
                <TextView
                    android:id="@+id/tv_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:drawableLeft="@drawable/iconfinder_sold"
                    android:drawablePadding="2dp"
                    android:drawableTint="@color/blue"
                    android:text="No"
                    android:textAllCaps="false"
                    android:textColor="#606e84 "
                    android:gravity="center"
                    android:textSize="22sp"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordertop"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/tv_plot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_baseline_location_on_24"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:drawablePadding="2dp"
                        android:drawableTint="#FF8C00"
                        android:paddingLeft="10dp"
                        android:text="Bahria Town"
                        android:textColor="#606e84 "
                        android:textSize="12sp"

                        />

                    <TextView
                        android:id="@+id/tv_square_yard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="4dp"
                        android:drawableLeft="@drawable/ic_baseline_pages_24"
                        android:drawablePadding="2dp"
                        android:drawableTint="@color/blue"
                        android:text="240 Sq. Ft"
                        android:textAllCaps="false"
                        android:textColor="#606e84 "

                        android:textSize="12sp"

                        />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

